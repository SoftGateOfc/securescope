<!DOCTYPE html>
<html lang="pt-BR">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Relat√≥rio - <%= dados?.nome_empresa || 'Empresa' %></title>

        <!-- Tailwind CSS via CDN -->
        <script src="https://cdn.tailwindcss.com"></script>

        <!-- Estilos para PDF -->
        <style>
            @page {
                margin: 2cm;
                size: A4;
            }

            body {
                font-family: Arial, sans-serif;
                line-height: 1.6;
            }

            .page-break {
                page-break-before: always;
            }
        </style>
    </head>

    <body class="bg-white text-gray-900">
        <!-- P√ÅGINA 1: CAPA -->
        <%- include('components/capa') %>

        <!-- P√ÅGINA 2: RESUMO -->
        <div class="page-break p-8">
            <h1
                class="text-3xl font-bold mb-8 text-blue-600 border-b-2 border-blue-600 pb-4"
            >
                Resumo Executivo
            </h1>

            <!-- Objetivo -->
            <div class="mb-8">
                <h2 class="text-xl font-semibold mb-4">üéØ Objetivo</h2>
                <div class="bg-blue-50 p-4 rounded-lg">
                    <p><%= dados?.objetivo || 'Objetivo n√£o informado' %></p>
                </div>
            </div>

            <!-- Estat√≠sticas -->
            <div class="mb-8">
                <h2 class="text-xl font-semibold mb-4">üìä Estat√≠sticas</h2>

                <div class="grid grid-cols-2 gap-4">
                    <div
                        class="bg-blue-500 text-white p-4 rounded-lg text-center"
                    >
                        <p class="text-2xl font-bold">
                            <%= dados_modelo?.total_perguntas_respondidas || 0
                            %>
                        </p>
                        <p class="text-sm">Total de Itens</p>
                    </div>

                    <div
                        class="bg-green-500 text-white p-4 rounded-lg text-center"
                    >
                        <p class="text-2xl font-bold">
                            <%= dados_modelo?.total_pilares ?
                            Object.keys(dados_modelo.total_pilares).length : 0
                            %>
                        </p>
                        <p class="text-sm">Pilares Analisados</p>
                    </div>
                </div>
            </div>

            <!-- Observa√ß√µes -->
            <div class="mb-8">
                <h2 class="text-xl font-semibold mb-4">üìù Observa√ß√µes</h2>
                <div
                    class="bg-yellow-50 p-4 rounded-lg border-l-4 border-yellow-500"
                >
                    <p>
                        <%= dados?.observacoes || 'Nenhuma observa√ß√£o informada'
                        %>
                    </p>
                </div>
            </div>
        </div>

        <!-- P√ÅGINA 3: PILARES (se tiver dados) -->
        <% if (dados_modelo?.total_pilares) { %>
        <div class="page-break p-8">
            <h1
                class="text-3xl font-bold mb-8 text-blue-600 border-b-2 border-blue-600 pb-4"
            >
                An√°lise por Pilares
            </h1>

            <div class="space-y-6">
                <% Object.entries(dados_modelo.total_pilares).forEach(([pilar,
                total]) => { %>
                <div
                    class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm"
                >
                    <div class="flex justify-between items-center mb-4">
                        <h3 class="text-lg font-semibold"><%= pilar %></h3>
                        <span class="text-2xl font-bold text-blue-600"
                            ><%= total %></span
                        >
                    </div>

                    <!-- Barra de progresso -->
                    <div class="w-full bg-gray-200 rounded-full h-4">
                        <% const porcentagem =
                        dados_modelo?.porcentagem_pilar?.[pilar] || 0; %>
                        <div
                            class="bg-blue-500 h-4 rounded-full"
                            style="width: <%= porcentagem %>%"
                        ></div>
                    </div>
                    <p class="text-sm text-gray-600 mt-2">
                        <%= porcentagem %>% do total
                    </p>
                </div>
                <% }); %>
            </div>
        </div>
        <% } %>

        <!-- RODAP√â -->
        <div class="text-center mt-16 pt-8 border-t border-gray-300">
            <p class="text-sm text-gray-600">
                Relat√≥rio gerado por
                <strong><%= dados?.nome_empresa || 'Sistema' %></strong>
            </p>
            <p class="text-xs text-gray-500">
                <%= dataGeracao || new Date().toLocaleDateString('pt-BR') %>
            </p>
        </div>
    </body>
</html>
